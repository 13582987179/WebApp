
/* CSS Document */
body{ background-color:#f6f2e8;}

img{ border:0;} 
a{ text-decoration:none; color:#4b4b4b;}
li{ list-style:none;} 
.top{ height:135px; background-image:url(topBg.jpg);}
.topBox,.navBox{ width:900px; margin:0 auto; overflow:hidden;}
.logo{ float:left; margin-top:26px; margin-left:220px;}
.nav{ height:50px; background-image:url(navBg.jpg);}
.navBox a{ float:left; display:block; color:white; font-size:16px; width:125px; text-align:center; line-height:50px;}
.navBox a:hover{ color:#c40000;}
.main{ width:1000px; margin:25px auto;}
.goodsCenter{ overflow:hidden; margin:20px 0 20px 0;}
.INtroTitle,.sourceTitle,.quesTitle{ overflow:hidden;height:48px; border-bottom:2px solid black;}
.INtroTitle img,.INtroTitle h1,.sourceTitle img,.sourceTitle h1,.quesTitle img,.quesTitle h1{ float:left;}
.INtroTitle img,.sourceTitle img,.quesTitle img{ margin-left:20px; margin-top:20px;}
.INtroTitle a,.sourceTitle a,.quesTitle a{ float:right;margin-top:22px; font-size:12px;}
.INtroTitle h1,.sourceTitle h1,.quesTitle h1{ font-size:16px; font-weight:normal; color:#4b4b4b; margin-left:14px; margin-top:18px;}
.INtrobody{ margin-top:20px;}
.INtroBox{ float:left; width:950px; margin-left:30px;}
.INtroBox h1{ font-size:16px;}
.INtroBox p{ font-size:14px; text-indent:2em; line-height:24px; margin-top:10px;}
.INtroBox p a{ color:#b90000; float:right;}

.contain{ no-repeat center 0; padding-bottom:30px;}
.Container{ width:1000px; margin:20px auto; overflow:hidden;}
.leftCon{ float:left; width:723px;}
.leftConTitle{ height:35px; border-bottom:2px solid black; overflow:hidden}
.leftConTitle img{ float:left;}
.leftConTitle p{ float:left; margin-left:20px;}
.leftConbody{ margin-top:25px; border:2px solid #ccc;}
.leftConNag{ height:50px; background-image:url(images/underLine.jpg); background-repeat:no-repeat; background-position:bottom left;}
.leftConNag h1{ font-family:"微软雅黑"; font-size:16px; font-weight:normal; line-height:50px; margin-left:38px;}
.leftConY{ height:60px; border-bottom:1px dotted #ccc;}
.leftConY h2{font-family:"微软雅黑"; font-size:18px; font-weight:normal;line-height:60px;margin-left:38px;}
.contectBox{ overflow:hidden;}
.contectBox img{ float:right;}
.leftConBox{ float:left; margin:20px 0 20px 38px;}
.leftConBox p{ line-height:48px;}
.rightCon{ float:right; width:238px;}
.conRTop{ background-color:#dc9e62;}
.conRTopbody{ width:218px; background-color:#f6f2e8; margin:0 auto; background-image:url(images/conTopic.png); background-repeat:no-repeat; background-position:right bottom; }
.conRTopbody img{ padding-top:20px; border-bottom:1px dotted #ccc}
.conRTopbody ul{ padding-bottom:60px;}
.conRTopbody li{ height:53px; border-bottom:1px dotted #ccc;  }
.conRTopbody li a{font-family:"楷体"; font-weight:bold; font-size:20px; line-height:53px; margin-left:50px;}
.conRTopbody  a:hover{ color:#c40000;}
.conRBotm{ border:1px solid #ccc; margin-top:20px;}
.conRBotm h1{ font-family:"微软雅黑"; font-size:18px; text-align:center; line-height:30px;}
.conRBotm ul{ margin:20px 0 10px 15px;}
.conRBotm li{ line-height:30px;}

